
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "carousel/slide1.jpg", class: 'd-block w-100', alt: 'First slide' %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'carousel/slide2.jpg', class: 'd-block w-100', alt: 'Second slide' %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'carousel/slide3.jpg', class: 'd-block w-100', alt: 'Third slide' %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="description-container">
  <div class="button-group">
    <div class="button-row">
      <div class="object-button" data-description="description-1"><img src="path/to/image1.jpg" alt="Bouton 1"></div>
      <div class="object-button" data-description="description-2"><img src="path/to/image2.jpg" alt="Bouton 2"></div>
    </div>
    <div class="button-row">
      <div class="object-button" data-description="description-3"><img src="path/to/image3.jpg" alt="Bouton 3"></div>
      <div class="object-button" data-description="description-4"><img src="path/to/image4.jpg" alt="Bouton 4"></div>
    </div>
  </div>
  <div class="description">
    <div id="description-1" class="description-content">Description for button 1</div>
    <div id="description-2" class="description-content">Description for button 2</div>
    <div id="description-3" class="description-content">Description for button 3</div>
    <div id="description-4" class="description-content">Description for button 4</div>
  </div>
</div>

<div class="signupdiv">
  <h1>JOIN US!</h1>
  <button class="signup-btn" id="signupBtn">Sign up</button>
</div>

<footer class="footer">
  <h2 class="footer-title"><b>LINGUA LINK</b></h2>
  <div class="sns-icons">
    <a href="#"><%= image_tag 'facebook.png', alt: 'Facebook' %></a>
    <a href="#"><%= image_tag 'linkedin.png', alt: 'Twitter' %></a>
    <a href="#"><%= image_tag 'instagram.png', alt: 'Instagram' %></a>
  </div>
</footer>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const buttons = document.querySelectorAll('.object-button');
  const descriptions = document.querySelectorAll('.description-content');

  buttons.forEach(button => {
    button.addEventListener('click', function() {

      descriptions.forEach(desc => desc.classList.remove('active'));


      const descriptionId = button.getAttribute('data-description');
      document.getElementById(descriptionId).classList.add('active');


      buttons.forEach(btn => btn.classList.remove('clicked'));
      button.classList.add('clicked');
    });
  });
});

</script>
