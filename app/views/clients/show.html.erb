<div class="container" data-controller="weekly-calendar">
  <div class="row sidebar-container">
      <%= render partial: "dashboard/sidebar" %>

<%# START USER CARD %>

    <div class="col-12 col-lg-8">

      <h2 class="client-h2"><%= @client.name %>'s Client Profile</h2>

<div class="card-product">
<img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 100px; height: 100px;">
  <div class="card-product-infos">
    <h2><%= @client.name %></h2>
    <h3>Nickname</h3>
    <p><strong>LineID:</strong> ____________</p>
    <p><strong>Phone Number:</strong> ###-###-####</p>

  </div>
</div>


    </div>
<%# END USER CARD %>

<%# START BOOKING CARD %>

    <div class="col-12 col-lg-4">

<div class="d-flex justify-content-center">
<div class="card bg-light mb-3 week-card" style="max-width: 18rem;">
<div class="card-header"><p><i class="fa-solid fa-clock"></i>
                          <%= @client.bookings.last.start_time.strftime("%I:%M%p") %> -
                          <%= @client.bookings.last.end_time.strftime("%I:%M%p") %> </div>
<div class="card-body">
<h5 class="card-title"><i class="fa-solid fa-user"></i> w/ <strong><%= @client.bookings.last.client.name %></strong></h5>

<p class="card-text">
                          <%= @client.bookings.last.status.capitalize %>
                          </p>
                        <% if @client.bookings.last.user == current_user %>
                          <% if @client.bookings.last.status == "pending" %>
                            <div>
                            <%= link_to 'Accept', accept_user_booking_path(user_id: @client.bookings.last.user_id, id: booking.id), class: "btn btn-success" %>
                              <%= link_to 'Decline', decline_user_booking_path(user_id: @client.bookings.last.user_id, id: booking.id), class: "btn btn-danger" %>
                            </div>
                          <% end %>
                        <% end %>
                        <p></p>
                                                  <button type="button" class="btn btn-warning"><%= link_to 'See more...', user_booking_path(user_id: @client.bookings.last.user_id, id: @client.bookings.last.id), class: "see-more" %></button>

  </div>
</div>
</div>

    </div>

<%# END BOOKING CARD %>

